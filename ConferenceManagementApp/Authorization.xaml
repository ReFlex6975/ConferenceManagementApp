<Window x:Class="ConferenceManagementApp.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConferenceManagementApp"
        mc:Ignorable="d"
        Title="Authorization" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFB5C1C7">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username" Margin="0" HorizontalAlignment="Center"/>
            <TextBox x:Name="usernameTextBox" Width="200" Height="30" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock Text="Password" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="passwordTextBox" Width="200" Height="30" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Login" Width="100" Height="30" Margin="10" Click="LoginButton_Click" HorizontalAlignment="Center"/>
            <Button Content="Guest" Width="100" Height="30" Margin="10" Click="GuestLoginButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
